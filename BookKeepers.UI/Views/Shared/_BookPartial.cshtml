@model IEnumerable<BookKeepers.BL.Models.Book>

<h1>Books</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="flexbox">
    @foreach (var item in Model)
    {
        <a class"boxLink" asp-route-id="@item.Id" asp-action="Details">
            <div class="books">
                <img src="~/img/@Html.DisplayFor(modelItem => item.Photo)" />
                <div class="info">
                    <h6>@Html.DisplayFor(modelItem => item.Title)</h6>
                    <h7>@Html.DisplayFor(modelItem => item.AuthorName)</h7>
                    <h7>@Html.DisplayFor(modelItem => item.Year)</h7>
                    <input class="btn btn-success btn-sm"
                           type="button"
                           onclick="AddToCart(@item.Id)"
                           value="+ Cart" />
                </div>
            </div>
        </a>
    }
</div>

<script type="text/javascript" class="init">
    $.noConflict();
    jQuery(document).ready(function ($) {
        $('#myData').DataTable({
            "lengthMenu": [[5, 10, 25, 30, -1], [5, 10, 25, 30, "All"]]
        });
    });

    function confirmDelete(itemId) {
        if (confirm('Are you sure you want to delete this item?')) {
            window.location.href = '/OrderItem/Delete/' + itemId;
        }
    }
</script>