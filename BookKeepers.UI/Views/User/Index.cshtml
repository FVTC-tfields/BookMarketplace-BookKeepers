@model IEnumerable<BookKeepers.BL.Models.User>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="m-2">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <span class="btn btn-outline-success">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</span>
                    <span class="btn btn-outline-info">@Html.ActionLink("Details", "Details", new { id = item.Id }) </span>
                    <span class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id }) </span>
                </td>
            </tr>
        }
    </tbody>
</table>
